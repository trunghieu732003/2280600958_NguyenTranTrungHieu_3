
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<_2280600958_NguyenTranTrungHieu_3.Models.Product>

<div class="container">
    <h2 class="mb-4">Products</h2>

    <!-- Nút "Add" để thêm sản phẩm mới -->
    <a asp-action="Add" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Add Product
    </a>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>$@product.Price.ToString("#,##0.00")</td>
                    <td>@product.Description</td>
                    <td>@(product.Category?.Name ?? "No Category")</td>
                    <td>
                        <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-view">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-edit">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-delete">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .table thead th {
            background-color: #343a40;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .table tbody td {
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

    .btn {
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 14px;
        font-weight: 500;
        text-align: center;
        transition: all 0.3s ease;
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-view {
        background-color: #17a2b8;
        color: white;
    }

        .btn-view:hover {
            background-color: #138496;
        }

    .btn-edit {
        background-color: #ffc107;
        color: black;
    }

        .btn-edit:hover {
            background-color: #e0a800;
        }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .fas {
        margin-right: 5px;
    }
</style>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
