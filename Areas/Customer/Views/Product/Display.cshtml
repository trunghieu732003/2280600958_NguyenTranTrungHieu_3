@{
    ViewData["Title"] = "Product Details";
}
@model _2280600958_NguyenTranTrungHieu_3.Models.Product

<div class="container mt-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="card product-detail-card">
        <div class="card-body p-0">
            <div class="row g-0">
                <!-- Product Image -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="col-lg-5 product-image-container">
                        <div class="product-image-wrapper">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image" />
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-5 product-image-container">
                        <div class="product-image-wrapper no-image">
                            <i class="fas fa-image"></i>
                            <p>No image available</p>
                        </div>
                    </div>
                }

                <!-- Product Details -->
                <div class="col-lg-7">
                    <div class="product-info p-4 p-lg-5">
                        <div class="category-badge mb-3">
                            @(Model.Category?.Name ?? "Uncategorized")
                        </div>

                        <h1 class="product-title mb-3">@Model.Name</h1>

                        <div class="product-price mb-4">
                            <span class="currency">$</span>
                            <span class="amount">@Model.Price.ToString("#,##0.00")</span>
                        </div>

                        <div class="product-description mb-4">
                            <h5 class="description-title">Description</h5>
                            <div class="description-content">
                                @Model.Description
                            </div>
                        </div>

                        @* <div class="product-actions"> *@
                        @*     <button class="btn btn-primary btn-lg me-2"> *@
                        @*         <i class="fas fa-shopping-cart me-2"></i>Add to Cart *@
                        @*     </button> *@
                        @*     <button class="btn btn-outline-primary btn-lg wishlist-btn"> *@
                        @*         <i class="far fa-heart"></i> *@
                        @*     </button> *@
                        @* </div> *@

                        <div class="additional-info mt-4">
                            <div class="info-item">
                                <i class="fas fa-truck"></i>
                                <span>Free shipping on orders over $50</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-undo"></i>
                                <span>30-day return policy</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-shield-alt"></i>
                                <span>Secure payment</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="product-navigation mt-4">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Products
        </a>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Product Details Page Styling */
    .breadcrumb {
        background-color: transparent;
        padding: 0;
    }

    .breadcrumb-item a {
        color: var(--primary-color);
        text-decoration: none;
    }

    .product-detail-card {
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .product-image-container {
        background-color: #f7f7f7;
    }

    .product-image-wrapper {
        height: 100%;
        min-height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .product-image {
        max-width: 100%;
        max-height: 400px;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

        .product-image:hover {
            transform: scale(1.03);
        }

    .no-image {
        color: #ccc;
        text-align: center;
        font-size: 1.5rem;
    }

        .no-image i {
            font-size: 5rem;
            margin-bottom: 1rem;
        }

    .category-badge {
        display: inline-block;
        background: linear-gradient(135deg, #7209b7, #4361ee);
        color: white;
        font-size: 0.75rem;
        font-weight: 600;
        padding: 0.35rem 1rem;
        border-radius: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .product-title {
        font-size: 2rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 1rem;
    }

    .product-price {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .currency {
        font-size: 1.2rem;
        font-weight: 500;
        vertical-align: top;
        margin-right: 0.2rem;
    }

    .description-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #444;
    }

    .description-content {
        color: #666;
        line-height: 1.6;
    }

    .product-actions {
        display: flex;
        align-items: center;
    }

    .wishlist-btn {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        border-radius: 50%;
        transition: all 0.3s ease;
    }

        .wishlist-btn:hover {
            background-color: #f8f4fc;
            color: var(--primary-color);
        }

    .additional-info {
        border-top: 1px solid #eee;
        padding-top: 1.5rem;
        margin-top: 1.5rem;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
    }

        .info-item i {
            color: var(--primary-color);
            margin-right: 0.75rem;
            font-size: 1rem;
        }

    .product-navigation {
        display: flex;
        justify-content: space-between;
    }

    media (max-width: 992px) {
        .product-image-wrapper

    {
        min-height: 300px;
    }

    .product-title {
        font-size: 1.7rem;
    }

    }

    media (max-width: 768px) {
        .product-info

    {
        padding: 1.5rem !important;
    }

    }
</style>