@{
    ViewData["Title"] = "Trang chủ | Shop Online";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 fw-bold">Chào mừng đến với Shop Online</h1>
            <p class="lead">Nơi mua sắm trực tuyến uy tín với hàng nghìn sản phẩm chất lượng</p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                <a href="/Identity/Account/Login" class="btn btn-primary btn-lg px-4 me-sm-3">Xem sản phẩm</a>
            </div>
        </div>
    </div>


    <!-- Phần khuyến mãi -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body p-5 text-center">
                    <h3 class="mb-3">Đăng ký nhận thông tin khuyến mãi</h3>
                    <p class="mb-4">Nhận ngay mã giảm giá 10% cho đơn hàng đầu tiên khi đăng ký!</p>
                    <div class="d-flex justify-content-center">
                        <a href="/Identity/Account/Register" class="btn btn-primary">Đăng ký</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>