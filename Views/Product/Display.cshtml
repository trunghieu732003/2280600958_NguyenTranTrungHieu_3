@{
    ViewData["Title"] = "Product Details";
}

@model _2280600958_NguyenTranTrungHieu_3.Models.Product


<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">@Model.Name</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Product Image -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="col-md-4">
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" />
                    </div>
                }
                <!-- Product Details -->
                <div class="col-md-8">
                    <h3 class="text-success">Price: $@Model.Price.ToString("#,##0.00")</h3>
                    <p class="lead">@Model.Description</p>
                    <p><strong>Category:</strong> @(Model.Category?.Name ?? "No Category")</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<!-- Custom CSS -->
<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .card-header {
        border-bottom: none;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-top: none;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .lead {
        font-size: 1.1rem;
        color: #555;
    }
</style>